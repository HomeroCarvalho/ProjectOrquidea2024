int widthTela= 1000;
int heightTela= 800;


LoopGame loop= create();
loop.StartScreen(widthTela,heightTela);

Imagem img1= create("18.png");


loop.LoadImages();
Text txtHello= create("Jogo 1!");
int idTextHello= 0;
int xTextHello = 0;
int yTextHello = 0;


int idPlayer= 0;
double xPlayer=0.0;
double yPlayer=100.0;


Vector2D positionMouse= create(50.0,150.0);

int saida=1;
while (saida>0)
{
	loop.BeginToDraw();

		loop.Draw(idPlayer,xPlayer, yPlayer);
